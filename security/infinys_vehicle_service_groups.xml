<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_infinys_booking_service" model="res.groups">
            <field name="name">Infinys Booking Service</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="group_infinys_showroom" model="res.groups">
            <field name="name">Infinys Showroom</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="service_booking_portal_rule" model="ir.rule">
            <field name="name">Service Booking Portal User Read Access</field>
            <field name="model_id" ref="model_service_booking"/>
            <field name="domain_force">[('customer_name', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="service_booking_public_rule" model="ir.rule">
            <field name="name">Service Booking Public User Read Access</field>
            <field name="model_id" ref="model_service_booking"/>
            <field name="domain_force">[('customer_name', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="group_infinys_service_supervisor" model="res.groups">
            <field name="name">Service Supervisor</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_infinys_booking_service'))]"/>
        </record>
    </data>
</odoo> 
