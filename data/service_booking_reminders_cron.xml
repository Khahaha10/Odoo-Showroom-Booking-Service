<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_service_booking_reminders" model="ir.cron">
            <field name="name">Service Booking: Daily Reminders Check</field>
            <field name="model_id" ref="infinys_service_showroom.model_service_booking"/>
            <field name="state">code</field>
            <field name="code">model._check_and_send_daily_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_new_service_appointment_reminders" model="ir.cron">
            <field name="name">Service Appointment: Daily New Appointment Reminders</field>
            <field name="model_id" ref="infinys_service_showroom.model_service_appointment"/>
            <field name="state">code</field>
            <field name="code">model._check_and_send_new_appointment_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>