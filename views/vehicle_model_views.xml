<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_vehicle_model" model="ir.actions.act_window">
            <field name="name">Vehicle Model</field>
            <field name="res_model">infinys.vehicle.model</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Vehicle Model
                </p>
            </field>
        </record>

        <record id="vehicle_model_view_form" model="ir.ui.view">
            <field name="name">infinys.vehicle.model.view.form</field>
            <field name="model">infinys.vehicle.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="vehicle_brand"/>
                            <field name="vehicle_type"/>
                            <field name="vehicle_fuel_type"/>
                            <field name="image" string="image" optional="show" widget="image" width="100" height="100"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vehicle_model_view_tree" model="ir.ui.view">
            <field name="name">infinys.vehicle.model.view.list</field>
            <field name="model">infinys.vehicle.model</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="vehicle_brand"/>
                    <field name="vehicle_type" widget="many2many_tags"/>
                    <field name="vehicle_fuel_type"/>
                    <field name="image" string="image" optional="show" widget="image" width="100" height="100"/>
                </list>
            </field>
        </record>
    </data>
</odoo>