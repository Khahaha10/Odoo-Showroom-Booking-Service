<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_inspection_type" model="ir.actions.act_window">
            <field name="name">Inspection Type</field>
            <field name="res_model">service.inspection.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Inspection Type
                </p>
            </field>
        </record>

        <record id="inspection_type_view_form" model="ir.ui.view">
            <field name="name">service.inspection.type.view.form</field>
            <field name="model">service.inspection.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="inspection_type_view_tree" model="ir.ui.view">
            <field name="name">service.inspection.type.view.list</field>
            <field name="model">service.inspection.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

    </data>
</odoo>