<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_service_booking" model="ir.actions.act_window">
            <field name="name">Service Booking</field>
            <field name="res_model">infinys.service.booking</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Service Booking
                </p>
            </field>
        </record>

        <record id="service_booking_view_form" model="ir.ui.view">
            <field name="name">infinys.service.booking.view.form</field>
            <field name="model">infinys.service.booking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <field name="error_msg" widget="text" readonly="1" />
                            <label for="name" string="Subject"/>
                            <h1>
                                <field class="text-break" name="name" placeholder="Booking Number" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="plan_service_date"/>
                                <field name="service_type"/>
                            </group>
                            <group>
                                <field name="plat_number"/>
                                <field name="vehicle_brand"/>
                                <field name="vehicle_model"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="service_booking_view_tree" model="ir.ui.view">
            <field name="name">infinys.service.booking.view.list</field>
            <field name="model">infinys.service.booking</field>
            <field name="arch" type="xml">
                <list>

                    <field name="name"/>

                </list>
            </field>
        </record>

    </data>
</odoo>