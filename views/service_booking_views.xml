<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_service_booking" model="ir.actions.act_window">
            <field name="name">Service Booking</field>
            <field name="res_model">service.booking</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="service_booking_view_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Service Booking
                </p>
            </field>
        </record>

        <record id="service_booking_view_kanban" model="ir.ui.view">
            <field name="name">service.booking.kanban</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_view" default_group_by="state" default_order="state_idx asc" group_expand="1" create="true" delete="true">
                    <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-warning="state == 'assigned'" decoration-danger="state == 'cancelled'"/>
                    <field name="state_idx"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        Customer: <field name="customer_name"/>
                                    </div>
                                    <div>
                                        Plat: <field name="plat_number"/>
                                    </div>
                                    <div>
                                        Booking Date: <field name="plan_service_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-warning="state == 'assigned'" decoration-danger="state == 'cancelled'"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="service_booking_view_form" model="ir.ui.view">
            <field name="name">service.booking.view.form</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_assign" type="object" string="Assigned" class="oe_highlight" invisible="state != 'booking'"/>
                        <button name="action_start" type="object" string="Start Service" class="oe_highlight" invisible="state != 'assigned'" confirm="Are you sure you want to start this service?"/>
                        <button name="action_complete" type="object" string="Completed" class="oe_highlight" invisible="state != 'in_progress'" confirm="Are you sure you want to complete this service?"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state in ['cancelled', 'completed']"/>
                        <field name="state" widget="statusbar" statusbar_visible="booking,assigned,in_progress,completed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <field name="error_msg" widget="text" readonly="1" />
                            <label for="name" string="Booking Number"/>
                            <h3>
                                <field class="text-break" name="name" placeholder="Booking Number" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group name="customer_information" string="Customer Information">
                                <field name="customer_name"/>
                                <field name="contact_number"/>
                                <field name="contact_email"/>
                                <field name="plan_service_date" widget="datetime"/>
                                <field name="service_type"/>
                                <field name="complaint_issue" string="Complaints" widget="textarea"/>
                            </group>
                            <group name="vehicle_information" string="Vehicle Information">
                                <field name="plat_number"/>
                                <field name="vehicle_brand"/>
                                <field name="vehicle_model"/>
                                <field name="vehicle_year_manufacture"/>
                                <field name="kilometers"/>
                                <field name="media_document" widget="many2many_binary" string="Media Documents"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <group>
                                    <field name="supervisor_user_id" widget="many2one_avatar_user"/>
                                    <field name="assigned_technician_id" widget="many2one_avatar_user" invisible="state not in ['assigned', 'in_progress', 'completed']"/>
                                    <field name="internal_notes" widget="textarea"/>
                                    <field name="cancel_reason" invisible="state != 'cancelled'"/>
                                </group>
                            </page>
                            <page string="Timesheet" invisible="state == 'cancelled'">
                                <group>
                                    <field name="assigned_datetime" />
                                    <field name="in_progress_datetime" />
                                    <field name="completed_datetime" />
                                </group>
                            </page>
                            <page string="Spareparts">
                                <field name="spare_part_line_ids" readonly="is_checklist_readonly">
                                    <list editable="bottom">
                                        <field name="product_id" domain="[('vehicle_part_ok', '=', True)]"/>
                                        <field name="qty"/>
                                        <field name="unit_price" readonly="1"/>
                                        <field name="subtotal" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Services">
                            </page>
                            <page string="Images/Documents">
                                <field name="internal_media_document" widget="many2many_binary" readonly="is_checklist_readonly"/>
                            </page>
                            <page string="Insepection Checklist">
                                <field name="inspection_checklist_line_ids" readonly="is_checklist_readonly">
                                    <list editable="bottom">
                                        <field name="inspection_type_id"/>
                                        <field name="checklist_ok"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Totals">
                                <group>
                                    <field name="total_sparepart"/>
                                    <field name="total_service_fee"/>
                                    <field name="total_amount"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="service_booking_view_list" model="ir.ui.view">
            <field name="name">service.booking.view.list</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <list default_order="state_idx asc">
                    <field name="name"/>
                    <field name="contact_number"/>
                    <field name="contact_email"/>
                    <field name="plan_service_date" widget="datetime"/>
                    <field name="service_type"/>
                    <field name="plat_number"/>
                    <field name="vehicle_brand"/>
                    <field name="vehicle_model"/>
                    <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-warning="state == 'assigned'" decoration-danger="state == 'cancelled'"/>
                </list>
            </field>
        </record>

        <record id="service_booking_view_search" model="ir.ui.view">
            <field name="name">service.booking.view.search</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Booking Number" filter_domain="['|', ('name', 'ilike', self), ('plat_number', 'ilike', self)]"/>
                    <filter string="Booking" name="filter_booking" domain="[('state', '=', 'booking')]"/>
                    <filter string="Assigned" name="filter_assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="In Progress" name="filter_in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Cancelled" name="filter_cancelled" domain="[('state', '=', 'cancelled')]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>