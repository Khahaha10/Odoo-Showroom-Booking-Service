<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_vehicle" model="ir.ui.view">
            <field name="name">res.partner.form.vehicle</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Vehicles">
                        <field name="vehicle_ids" nolabel="1">
                            <list string="Vehicles">
                                <field name="vehicle_plate_no"/>
                                <field name="vehicle_brand_id"/>
                                <field name="vehicle_model_id"/>
                                <field name="vehicle_year"/>
                            </list>
                        </field>      
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
