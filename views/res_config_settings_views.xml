<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.infinys.vehicle</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[hasclass('oe_form_configuration')]" position="inside">
                <div class="app_settings_block" data-string="Infinys Vehicle" string="Infinys Vehicle" data-key="infinys_service_showroom">
                    <h2>Vehicle Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_infinys_showroom"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_infinys_showroom"/>
                                <div class="text-muted">
                                    Enable showroom features to manage and sell vehicles.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_infinys_booking_service"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_infinys_booking_service"/>
                                <div class="text-muted">
                                    Enable service booking features for vehicle maintenance.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="infinys_vehicle_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'infinys_service_showroom'}</field>
    </record>

</odoo>
