<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="website_menu_service_booking" model="website.menu">
    <field name="name">Service Booking</field>
    <field name="url">/service-booking/new</field>
    <field name="website_id" ref="website.default_website"/>
    <field name="parent_id" ref="website.main_menu"/>
    <field name="sequence">20</field>
  </record>

  <template id="service_booking_form_template" name="Service Booking Form">
    <t t-call="website.layout">
      <div class="container">
        <h2>Service Booking Form</h2>
        <form action="/service_booking/submit" method="post">
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control"/>
          </div>
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
      </div>
    </t>
  </template>
</odoo>
