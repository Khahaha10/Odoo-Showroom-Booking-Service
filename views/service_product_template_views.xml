<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_inherit_custom" model="ir.ui.view">
        <field name="name">product.template.form.custom.field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-flex" invisible="type == 'combo'">
                    <field name="vehicle_part_ok" />
                    <label for="vehicle_part_ok" />
                </span>
            </xpath>
        </field>
    </record>
</odoo> 