<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.infinys.vehicle</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[hasclass('oe_form_configuration')]" position="inside">
                <app data-string="Service &amp; Showroom" string="Service &amp; Showroom"
                    name="infinys_service_showroom"
                    logo="/infinys_service_showroom/static/description/booking.png">
                    <h2>Basic Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_infinys_booking_service" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_infinys_booking_service" />
                                <div class="text-muted">
                                    Enable service booking features for vehicle maintenance.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_infinys_showroom" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_infinys_showroom" />
                                <div class="text-muted">
                                    Enable showroom features to manage and sell vehicles.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_advanced_settings" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_advanced_settings" />
                                <div class="text-muted">
                                    Show advanced configuration options.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div invisible="not show_advanced_settings">
                        <h2>Automation Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="automate_delivery_order_done" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="automate_delivery_order_done" />
                                    <div class="text-muted">
                                        Automatically mark delivery orders created from service
                                        bookings as 'done'.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="automate_invoice_creation" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="automate_invoice_creation" />
                                    <div class="text-muted">
                                        Automatically confirm sales orders and create draft invoices
                                        from service bookings.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>WhatsApp Integration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="whatsapp_phone_number" />
                                    <div class="text-muted">
                                        Enter the WhatsApp number for showroom inquiries.
                                    </div>
                                    <field name="whatsapp_phone_number" placeholder="628123456789" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="whatsapp_prefill_message" />
                                    <div class="text-muted">
                                        Default message to prefill. Use {car_name} for the car's
                                        name.
                                    </div>
                                    <field name="whatsapp_prefill_message"
                                        class="w-100 o_full_width" widget="text" />
                                </div>
                            </div>
                        </div>
                        <h2>Service Booking Reminders</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_service_booking_reminders" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="enable_service_booking_reminders" />
                                    <div class="text-muted">
                                        Globally enable or disable activity reminders for service
                                        bookings.
                                    </div>
                                    <div class="content-group mt16"
                                        invisible="not enable_service_booking_reminders">
                                        <div class="row mt16">
                                            <label for="reminder_interval_days_assigned"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_interval_days_assigned"
                                                class="o_light_label oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_interval_days_in_progress"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_interval_days_in_progress"
                                                class="o_light_label oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_new_booking_supervisor"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_new_booking_supervisor"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_assigned_technician_initial"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_assigned_technician_initial"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_in_progress_notification"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_in_progress_notification"
                                                class="oe_inline" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_service_booking_email_reminders" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="enable_service_booking_email_reminders" />
                                    <div class="text-muted">
                                        Globally enable or disable email reminders for service
                                        bookings.
                                    </div>
                                    <div class="content-group mt16"
                                        invisible="not enable_service_booking_email_reminders">
                                        <div class="row mt16">
                                            <label for="reminder_interval_days_assigned_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_interval_days_assigned_email"
                                                class="o_light_label oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_interval_days_in_progress_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_interval_days_in_progress_email"
                                                class="o_light_label oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_new_booking_supervisor_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_new_booking_supervisor_email"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_assigned_technician_initial_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_assigned_technician_initial_email"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_in_progress_notification_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_in_progress_notification_email"
                                                class="oe_inline" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_new_appointment_supervisor_reminders" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="enable_new_appointment_supervisor_reminders" />
                                    <div class="text-muted">
                                        Globally enable or disable reminders for new service
                                        appointments.
                                    </div>
                                    <div class="content-group mt16"
                                        invisible="not enable_new_appointment_supervisor_reminders">
                                        <div class="row mt16">
                                            <label
                                                for="reminder_new_appointment_supervisor_activity"
                                                class="o_light_label col-lg-5" />
                                            <field
                                                name="reminder_new_appointment_supervisor_activity"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_new_appointment_supervisor_email"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_new_appointment_supervisor_email"
                                                class="oe_inline" />
                                        </div>
                                        <div class="row mt16">
                                            <label for="reminder_interval_days_new_appointment"
                                                class="o_light_label col-lg-5" />
                                            <field name="reminder_interval_days_new_appointment"
                                                class="o_light_label oe_inline" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </app>
            </xpath>
        </field>
    </record>

    <record id="infinys_vehicle_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'infinys_service_showroom'}</field>
    </record>

</odoo>