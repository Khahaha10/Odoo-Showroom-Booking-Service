<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_car_vehicle_list" model="ir.ui.view">
    <field name="name">car.vehicle.list</field>
    <field name="model">car.vehicle</field>
    <field name="arch" type="xml">
      <list string="Showroom Vehicles">
        <field name="name"/>
        <field name="brand_id"/>
        <field name="model_id"/>
        <field name="year"/>
        <field name="price"/>
        <field name="website_published"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_car_vehicle_form" model="ir.ui.view">
    <field name="name">car.vehicle.form</field>
    <field name="model">car.vehicle</field>
    <field name="arch" type="xml">
      <form string="Showroom Vehicle">
        <sheet>
          <div class="oe_button_box" name="button_box"/>
          <group>
            <group>
              <field name="name" string="Car Name"/>
              <field name="brand_id" readonly="1" force_save="1"/>
              <field name="model_id" options="{'no_create': True, 'no_create_edit': True}"/>
              <field name="type_id" readonly="1" force_save="1"/>
              <field name="fuel_type_id" readonly="1" force_save="1"/>
              <field name="year" string="Year"/>
              <field name="transmission" string="Transmission"/>
              <field name="odometer" string="Odometer (km)"/>
            </group>
            <group>
              <field name="price" string="Price"/>
              <field name="currency_id" string="Currency" groups="base.group_multi_currency"/>
              <field name="website_published" string="Published on Website"/>
              <field name="active" string="Active"/>
            </group>
          </group>

          <notebook>
            <page string="Images">
              <group>
                <field name="main_image" widget="image" class="oe_avatar" string="Main Image"/>
              </group>
              <group string="Gallery">
                <field name="image_ids">
                  <list editable="bottom" string="Gallery Images">
                    <field name="name" string="Title"/>
                    <field name="image" widget="image" string="Image"/>
                  </list>
                </field>
              </group>
            </page>

            <page string="Description">
              <field name="description"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_car_vehicle" model="ir.actions.act_window">
    <field name="name">Showroom Vehicles</field>
    <field name="res_model">car.vehicle</field>
    <field name="view_mode">list,form</field>
  </record>


</odoo>
